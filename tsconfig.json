{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/app/*": ["./src/app/*"],
      "@/helpers/*": ["./src/helpers/*"],
      "@/infra/*": ["./src/infra/*"],
      "@/interface/*": ["./src/interface/*"],
      "@/main/*": ["./src/main/*"],
      "@/presentation/*": ["./src/presentation/*"],
      "@/test/*": ["./test/*"]
    }
  }
}
